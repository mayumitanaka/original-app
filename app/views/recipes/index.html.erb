<%= render "shared/header" %>

<div class='main'>
  <div class='item-contents'>
    <h2 class='title'>ピックアップカテゴリー</h2>
    <div class="subtitle" >
      新規投稿商品
    </div>
    <ul class='item-lists'>
      <% @recipes.each do |recipe| %>
        <li class='list'>
          <%= link_to recipe_path(recipe.id) do %>
          <div class='item-img-content'>
            <%= image_tag recipe.image, class: "item-img" if recipe.image.attached? %>
          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= recipe.recipe_title %>
            </h3>
          </div>
          <% end %>
        </li>
      <% end %>

      <% unless @recipes.present? %>
        <li class='list'>
          <%= link_to '#' do %>
          <%= image_tag "public/images/test_image.png", class: "item-img" %>
          <div class='item-info'>
            <h3 class='item-name'>
              レシピを投稿してね！
            </h3>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>

<%= link_to(new_recipe_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%#= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>